NAME
	SuperLog - Consistent object-oriented interface for log.

SYNOPSIS
	# Using a module
	use SuperLog;
	
	# Explicit creation of object Log.
	my $log = Log->new

	# Binding a filename.
	$log->filename('log.txt');
	
	# Set the mode of log. 
	# with char 'w' we indicate that the data is appending into a file.
	# with char 'n' we indicate that the filename is creating again.
	$log->write('w');

	# Open a file
	$log->open;

	# Write a data value into a file.
	$log->write(':]');
	
	# Close a file

	$log->close;

	# enjoy! :]

